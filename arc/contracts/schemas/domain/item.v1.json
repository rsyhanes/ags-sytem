{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ags.system/contracts/domain/item.v1.json",
  "title": "Item",
  "description": "Canonical domain representation of an item in the system.",
  "type": "object",
  "properties": {
    "id": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" },
    "code": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "price": { "type": "number", "minimum": 0 },
    "color": { "$ref": "color.v1.json" },
    "dimensions": { "$ref": "measure.v1.json" },
    "state": {
      "type": "string",
      "enum": ["Active", "Inactive", "Draft"]
    },
    "createdAt": { "type": "string", "format": "date-time" },
    "modifiedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "code", "name", "price", "state", "createdAt"]
}
