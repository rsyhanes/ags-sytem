{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ags.system/contracts/domain/system.v1.json",
  "title": "System",
  "description": "Entity representing a configurable window/door/railing system.",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "code": { "type": "string", "pattern": "^[a-zA-Z0-9_-]+$" },
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "category": {
      "type": "string",
      "enum": ["Window", "Door", "Railing"]
    },
    "isActive": { "type": "boolean" },
    "createdAt": { "type": "string", "format": "date-time" },
    "modifiedAt": { "type": "string", "format": "date-time" },
    "components": {
      "type": "array",
      "items": { "$ref": "system-component.v1.json" }
    },
    "availableColors": {
      "type": "array",
      "items": { "$ref": "color.v1.json" }
    },
    "sizeConstraints": { "$ref": "size-constraints.v1.json" }
  },
  "required": ["id", "code", "name", "category", "isActive", "createdAt"]
}
